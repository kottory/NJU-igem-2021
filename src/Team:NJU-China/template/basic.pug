html 
  head 
    link(rel="stylesheet" href="style/global.css")
    block title 
  body 
    div(class="flex flex-col min-h-screen")
      nav(class="w-full flex flex-col md:flex-row items-center flex-wrap justify-between px-8 py-1 bg-gray-900 text-white")
        a(href="/Team:NJU-China/"): p(class="font-bold text-xl py-1.5 tracking-widest") NJU-China 2021
        - const dropMenuItem = ['project' , 'human practices', 'notebook', 'team']
        - const dropItem = ['overview', 'collaborations', 'education', 'partnership', 'art']
        div(class="flex flex-row flex-wrap space-x-5")
          each item in dropMenuItem 
            div(x-data="{ open: false }" @click.away="open = false")
              button(class="px-1.5 focus:outline-none rounded focus:ring focus:border-blue-300" @click="open = !open")
                p(class="inline")= item
                svg(fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': open, 'rotate-0': !open}" class="inline w-4 h-4 mt-1 transition-transform duration-200 transform md:-mt-1")
                  path(fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd")
              div(x-show="open" class="absolute px-3 pt-2 pb-4 bg-gray-800 rounded-md shadow-lg space-y-2")
                each opt in dropItem 
                  p()= opt
    
          a(class="px-1.5 focus:outline-none rounded focus:ring focus:border-blue-300" href="/Team:NJU-China/achivements") achivements
          a(class="px-1.5 focus:outline-none rounded focus:ring focus:border-blue-300" href="/Team:NJU-China/parts") parts

      main(class="flex-grow container mx-auto mt-8")
        block content

      footer(class="flex flex-col w-full bg-gray-100 text-gray-600 pt-6 pb-2 px-20")
        div(class="flex flex-row justify-around space-x-5")
          
          div(class="flex flex-col")
            p(class="text-xl") About
            a(class="text-sm underline hover:text-teal-600" href="https://www.nju.edu.cn") Nanjing University Official Website
            a(class="text-sm underline hover:text-teal-600" href="https://github.com/kottory/NJU-igem-2021") Site Repository On GitHub
          div(class="flex flex-col")
            p(class="text-xl") Contact Us
            p(class="text-sm") School of Life Science, 163 Xianlin Road, Qixia District, Nanjing University, Jiangsu Province, China
            p(class="text-sm"): a(href="mailto:example@nju.edu.cn") example@nju.edu.cn
          
        p(class="pt-6 w-full text-center") Â©2021 All Rights Reserved.

  script(src="script/alpine.js")